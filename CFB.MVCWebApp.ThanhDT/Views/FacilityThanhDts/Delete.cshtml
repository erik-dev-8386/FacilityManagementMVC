@model CFB.Entities.ThanhDT.Models.FacilityThanhDt
@{
    ViewData["Title"] = "Delete Facility";
}

<style>
    :root {
        --primary: #6366f1;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --dark: #1e293b;
        --gray: #64748b;
        --light-gray: #f1f5f9;
        --purple: #a855f7;
        --pink: #ec4899;
    }

    * {
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
        position: relative;
        overflow-x: hidden;
    }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: moveBackground 20s linear infinite;
            pointer-events: none;
            z-index: 0;
        }

    @@keyframes moveBackground {
        0% {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(50px, 50px);
        }
    }

    .delete-wrapper {
        padding: 2rem 1rem;
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    /* Header */
    .page-header {
        background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.95) 100%);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.2), 0 0 0 1px rgba(255,255,255,0.5);
        position: relative;
        overflow: hidden;
        animation: slideDown 0.6s ease-out;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(90deg, var(--danger), #dc2626, var(--danger));
        background-size: 200% 100%;
        animation: gradientShift 3s ease infinite;
    }

    @@keyframes gradientShift {
        0%, 100% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }
    }

    .header-content {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .header-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--danger) 0%, #dc2626 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
        box-shadow: 0 15px 40px rgba(239, 68, 68, 0.5);
        animation: pulse 2s ease-in-out infinite;
        position: relative;
    }

        .header-icon::after {
            content: '';
            position: absolute;
            inset: -3px;
            background: linear-gradient(135deg, var(--danger), #dc2626);
            border-radius: 23px;
            opacity: 0.5;
            filter: blur(10px);
            z-index: -1;
            animation: glow 2s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    @@keyframes glow {
        0%, 100% {
            opacity: 0.5;
        }

        50% {
            opacity: 0.8;
        }
    }

    .header-text h1 {
        font-size: 2.25rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--danger), #dc2626);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0 0 0.5rem 0;
        letter-spacing: -0.5px;
    }

    .header-text p {
        color: var(--gray);
        font-size: 1.1rem;
        margin: 0;
        font-weight: 500;
    }

    /* Warning Banner */
    .warning-banner {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(220, 38, 38, 0.1));
        border: 2px solid rgba(239, 68, 68, 0.4);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        animation: slideDown 0.6s ease-out 0.2s both;
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.15);
    }

    .warning-icon {
        width: 48px;
        height: 48px;
        background: var(--danger);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        flex-shrink: 0;
        animation: shake 0.5s ease-in-out infinite;
    }

    @@keyframes shake {
        0%, 100% {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(-5deg);
        }

        75% {
            transform: rotate(5deg);
        }
    }

    .warning-content h3 {
        margin: 0 0 0.5rem 0;
        color: var(--danger);
        font-size: 1.25rem;
        font-weight: 700;
    }

    .warning-content p {
        margin: 0;
        color: var(--dark);
        font-weight: 500;
        line-height: 1.6;
    }

    /* Details Card */
    .details-card {
        background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.95) 100%);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.2), 0 0 0 1px rgba(255,255,255,0.5);
        border: 1px solid rgba(255,255,255,0.4);
        margin-bottom: 2rem;
        animation: slideUp 0.6s ease-out 0.3s both;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .details-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark);
        margin: 0 0 1.5rem 0;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(226, 232, 240, 0.5);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .details-title i {
            color: var(--danger);
            font-size: 1.75rem;
        }

    .details-grid {
        display: grid;
        gap: 1.5rem;
    }

    .detail-item {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 1rem;
        padding: 1rem;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .detail-item:hover {
            background: rgba(99, 102, 241, 0.05);
        }

    .detail-label {
        font-weight: 700;
        color: var(--gray);
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .detail-label i {
            color: var(--primary);
            font-size: 1.1rem;
        }

    .detail-value {
        color: var(--dark);
        font-weight: 600;
        font-size: 1rem;
        word-break: break-word;
    }

        .detail-value.empty {
            color: var(--gray);
            font-style: italic;
            font-weight: 500;
        }

    /* Status Badge */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.875rem;
    }

        .status-badge.available {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.15), rgba(16, 185, 129, 0.08));
            border: 2px solid rgba(16, 185, 129, 0.3);
            color: var(--success);
        }

        .status-badge.unavailable {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(239, 68, 68, 0.08));
            border: 2px solid rgba(239, 68, 68, 0.3);
            color: var(--danger);
        }

        .status-badge i {
            font-size: 1rem;
        }

    /* Action Buttons */
    .action-section {
        background: linear-gradient(135deg, rgba(255,255,255,0.98) 0%, rgba(255,255,255,0.95) 100%);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.2), 0 0 0 1px rgba(255,255,255,0.5);
        border: 1px solid rgba(255,255,255,0.4);
        animation: slideUp 0.6s ease-out 0.4s both;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 1rem 2.5rem;
        border-radius: 12px;
        border: none;
        font-weight: 700;
        font-size: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        text-decoration: none;
        position: relative;
        overflow: hidden;
        flex: 1;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255,255,255,0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .btn i {
            font-size: 1.2rem;
            transition: transform 0.3s ease;
        }

        .btn:hover i {
            transform: scale(1.1);
        }

    .btn-danger {
        background: linear-gradient(135deg, var(--danger) 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
    }

        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(239, 68, 68, 0.6);
            animation: shake-button 0.5s ease;
        }

    @@keyframes shake-button {
        0%, 100% {
            transform: translateY(-3px) translateX(0);
        }

        25% {
            transform: translateY(-3px) translateX(-3px);
        }

        75% {
            transform: translateY(-3px) translateX(3px);
        }
    }

    .btn-danger:active {
        transform: translateY(-1px);
    }

    .btn-secondary {
        background: white;
        color: var(--gray);
        border: 2px solid #e2e8f0;
    }

        .btn-secondary:hover {
            background: var(--light-gray);
            border-color: var(--gray);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

        .btn-secondary:active {
            transform: translateY(-1px);
        }

    /* Confirmation Text */
    .confirmation-text {
        text-align: center;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05));
        border-radius: 12px;
        border: 2px dashed rgba(239, 68, 68, 0.3);
    }

        .confirmation-text p {
            margin: 0;
            color: var(--danger);
            font-weight: 700;
            font-size: 1.1rem;
        }

        .confirmation-text small {
            display: block;
            margin-top: 0.5rem;
            color: var(--gray);
            font-weight: 500;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .detail-item {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }

        .header-content {
            flex-direction: column;
            text-align: center;
        }

        .details-card {
            padding: 1.5rem;
        }

        .page-header {
            padding: 2rem 1.5rem;
        }

        .header-text h1 {
            font-size: 1.75rem;
        }

        .header-icon {
            width: 70px;
            height: 70px;
            font-size: 2rem;
        }

        .warning-banner {
            flex-direction: column;
            text-align: center;
        }

        .warning-icon {
            margin: 0 auto;
        }
    }

    @@media (max-width: 480px) {
        .delete-wrapper {
            padding: 1rem 0.5rem;
        }

        .details-card,
        .action-section {
            padding: 1.5rem 1rem;
            border-radius: 16px;
        }

        .page-header {
            padding: 1.5rem 1rem;
            border-radius: 16px;
        }

        .warning-banner {
            padding: 1rem;
        }
    }
</style>

<div class="delete-wrapper">
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="bi bi-trash3-fill"></i>
            </div>
            <div class="header-text">
                <h1>Delete Facility</h1>
                <p>Review facility information before deletion</p>
            </div>
        </div>
    </div>

    <!-- Warning Banner -->
    <div class="warning-banner">
        <div class="warning-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <div class="warning-content">
            <h3>⚠️ Warning: Permanent Action</h3>
            <p>You are about to permanently delete this facility. This action <strong>cannot be undone</strong>. Please review the information below carefully before proceeding.</p>
        </div>
    </div>

    <!-- Details Card -->
    <div class="details-card">
        <div class="details-title">
            <i class="bi bi-info-circle-fill"></i>
            <span>Facility Details</span>
        </div>

        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-building"></i>
                    Facility Name
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.FacilityName)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-tag-fill"></i>
                    Facility Type
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.FacilityTypeThanhDt.TypeName)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-geo-alt-fill"></i>
                    Campus
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.CampusThanhDt.Name)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-people-fill"></i>
                    Capacity
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.Capacity) people
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-pin-map-fill"></i>
                    Location Detail
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.LocationDetail)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-card-text"></i>
                    Description
                </div>
                <div class="detail-value @(string.IsNullOrWhiteSpace(Model.Description) ? "empty" : "")">
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        @Html.DisplayFor(model => model.Description)
                    }
                    else
                    {
                        <text>No description provided</text>
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-toggle-on"></i>
                    Availability
                </div>
                <div class="detail-value">
                    @if (Model.IsAvailable == true)
                    {
                        <span class="status-badge available">
                            <i class="bi bi-check-circle-fill"></i>
                            Available
                        </span>
                    }
                    else
                    {
                        <span class="status-badge unavailable">
                            <i class="bi bi-x-circle-fill"></i>
                            Unavailable
                        </span>
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-calendar-plus"></i>
                    Created At
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.CreatedAt)
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="bi bi-calendar-check"></i>
                    Updated At
                </div>
                <div class="detail-value">
                    @Html.DisplayFor(model => model.UpdatedAt)
                </div>
            </div>
        </div>
    </div>

    <!-- Action Section -->
    <div class="action-section">
        <div class="confirmation-text">
            <p>🗑️ Are you absolutely sure?</p>
            <small>This will permanently delete the facility and cannot be recovered.</small>
        </div>

        <form asp-action="Delete" id="deleteForm">
            <input type="hidden" asp-for="FacilityThanhDtid" />

            <div class="action-buttons">
                <button type="submit" class="btn btn-danger" id="deleteBtn">
                    <i class="bi bi-trash3-fill"></i>
                    <span>Yes, Delete Permanently</span>
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i>
                    <span>No, Go Back</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Confirmation dialog on delete
        document.getElementById('deleteBtn')?.addEventListener('click', function(e) {
            const confirmed = confirm('⚠️ FINAL CONFIRMATION\n\nAre you absolutely sure you want to delete this facility?\n\nThis action CANNOT be undone!');
            if (!confirmed) {
                e.preventDefault();
            }
        });

        // Add animation on form submission
        document.getElementById('deleteForm')?.addEventListener('submit', function(e) {
            const deleteBtn = document.getElementById('deleteBtn');
            if (deleteBtn) {
                deleteBtn.innerHTML = '<i class="bi bi-hourglass-split"></i><span>Deleting...</span>';
                deleteBtn.disabled = true;
                deleteBtn.style.opacity = '0.7';
            }
        });

        // Smooth scroll on page load
        window.addEventListener('load', function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
}